extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)
        if(user.avatar)
          img(src=user.avatar width="150px" class="mb-3")
        else
          img(src="/images/users.jpg" width="150px" class="mb-3")
        div Họ và tên: #{user.fullName}
        div  Email : #{user.email}

      .col-2 
        a(href="/user/edit" class="btn btn-dark btn-block mt-3") Chỉnh sửa
      .col-2 
        a(href="/user/password-old" class="btn btn-primary btn-block mt-3") Đổi mật khẩu
