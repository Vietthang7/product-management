extends ../../layouts/default.pug  
include ../../mixins/box-head.pug  

block main  
  .container.my-3  
    .row  
      .col-12  
        +box-head(pageTitle)  
    if(cartDetail.products.length > 0)  
      .row  
        .col-12  
          table(class="table table-bordered" cart)  
            thead  
              tr  
                th STT  
                th Ảnh  
                th Tên  
                th Giá  
                th Số lượng  
                th Tổng tiền  
            tbody  
              each product, index in cartDetail.products  
                tr  
                  td #{index + 1}  
                  td  
                    img(  
                      src=product.productInfo.thumbnail  
                      alt=product.productInfo.title  
                      width="80px"  
                    )  
                  td #{product.productInfo.title}  
                  td #{product.productInfo.priceNew}đ  
                  td #{product.quantity}  
                  td #{product.totalPrice}đ
          h3(class="text-right") Tổng đơn hàng: #{cartDetail.totalPrice}đ
          .text-right  
            a(href="/checkout/payment" class="btn btn-success mx-2") Thanh Toán