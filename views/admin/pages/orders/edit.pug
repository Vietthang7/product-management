extends ../../layouts/default.pug

block main
  .container.my-3
    .row
      .col-12
        if(role.permissions.includes("orders_edit"))
          h1(class="mb-4") #{pageTitle}

          form(
            action=`/${prefixAdmin}/orders/edit/${order.id}?_method=PATCH`
            method="POST"
          )
            div(class="form-group")
              label(for="fullName") Tên khách hàng
              input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=order.userInfo.fullName
              )
            div(class="form-group")
              label(for="phone") Số điện thoại
              input(
                type="number"
                class="form-control"
                id="phone"
                name="phone"
                value=order.userInfo.phone
              )
            div(class="form-group")
              label(for="address") Địa chỉ
              input(
                type="text"
                class="form-control"
                id="address"
                name="address"
                value=order.userInfo.address
              )
            div(class="form-group")
              label(for="notes") Ghi chú
              textarea(
                class="form-control"
                id="notes"
                name="notes"
                rows="5"
                textarea-mce
              ) #{order.userInfo.notes}
    .row
      .col-12
        h2 Sản phẩm
        table(class="table table-bordered" order)
          thead
            tr
              th STT
              th Ảnh
              th Tên
              th Giá
              th Số lượng
              th Tổng tiền
              th Hành động
          tbody
            if(order.products.length > 0)
              each product, index in order.products
                tr
                  td #{index + 1}
                  td
                    img(
                      src=product.productInfo.thumbnail
                      alt=product.productInfo.title
                      width="80px"
                    )
                  td
                    a(
                      href=`/products/detail/${product.productInfo.slug}`
                    ) #{product.productInfo.title}
                  td #{product.productInfo.priceNew}$
                  td
                    input(
                      type="number"
                      name="quantity"
                      value=product.quantity
                      min="1"
                      product-id=product.productId
                      style="width: 60px"
                    )
                  td #{product.totalPrice}$
                  td
                    a(
                      href=`/cart/delete/${product.productId}`
                      class="btn btn-danger"
                    ) Xóa
        if(order.products.length > 0)
          h3(class="text-right") Tổng đơn hàng: #{order.totalPrice}$            
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật